<%= form_for [refinery, :planets_admin, @planet] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @planet,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.planets.admin.planets.planet'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @planet.name) %>
<% end -%>
