<% content_for :body_content_title do %>
  <%= @planet.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @planet.name %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="planets">
      <% @planets.each do |planet| %>
        <li>
          <%= link_to planet.name, refinery.planets_planet_path(planet) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
