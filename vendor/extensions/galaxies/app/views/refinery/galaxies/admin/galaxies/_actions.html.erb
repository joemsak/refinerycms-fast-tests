<ul>
  <% if ::Refinery::Galaxies::Admin::GalaxiesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.galaxies_admin_galaxies_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_galaxies_admin_galaxy_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Galaxies::Admin::GalaxiesController.sortable? && ::Refinery::Galaxies::Galaxy.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Galaxies"),
                 refinery.galaxies_admin_galaxies_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Galaxies"),
                 refinery.galaxies_admin_galaxies_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
