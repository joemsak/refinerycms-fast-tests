<%= form_for [refinery, :galaxies_admin, @galaxy] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @galaxy,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.galaxies.admin.galaxies.galaxy'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @galaxy.name) %>
<% end -%>
